root = true

# nix NL
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{c,h,cc,cpp}]
charset = utf-8

# 4 space indentation
[*.{c,h,cc,cpp}]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
